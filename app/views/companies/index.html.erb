<div class="row">
  <%= render :partial => "left" %>
  <main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4">
    <div class="jumbotron">
    <%= search_form_for @c do |f| %>
      <div class="form-row">
        <div class="col-md-4 mb-3">
          <%= f.label :name_or_overview_cont %>
          <%= f.search_field :name_or_overview_cont %>
        </div>
        <div class="col-md-4 mb-3">
          <%= f.label :country_id_eq %>
          <%= f.collection_select :country_id_eq, @country, :id, :name, :include_blank => '指定なし' %>
        </div>
        <div class="col-md-4 mb-3">
          <%= f.label :stage_id_eq %>
          <%= f.collection_select :stage_id_eq, @stages, :id, :name, :include_blank => '指定なし' %>
        </div>
        <div class="col-md-4 mb-3">
          <%= f.label :industries_id_eq %>
          <%= f.collection_select :industries_id_eq, @industries, :id, :name, :include_blank => '指定なし' %>
        </div>
        <%= sort_link(@c, :total_funded_amount, [:total_funded_amount, 'total_funded_amount asc'], '総調達額で並べる') %>
      </div>
      <%= f.submit %>
    <% end %>
    </div>
    <p>
      <span style="font-size: 15px; color: #a9a9a9;">検索結果</span>
      <span style="font-size: 18px; color: #696969;"><%= @companies.size %></span>
      <span style="font-size: 15px; color: #a9a9a9;">社</span>
    </p>
    <div class="table-responsive">
      <table class="table table-striped table-sm">
        <thead>
          <tr>
            <th style="background-color: #F2F2F2;">会社名</th>
            <th style="background-color: #F2F2F2;">国</th>
            <th style="background-color: #F2F2F2;">業種</th>
            <th style="background-color: #F2F2F2;">ステージ</th>
            <th style="background-color: #F2F2F2;">総調達額</th>
            <th style="background-color: #F2F2F2;">最終調達日</th>
          </tr>
        </thead>
        <tbody>
          <% @companies.each do |c| %>
            <tr style="border-bottom: 1px solid gray">
              <td>
                <%= link_to "#{ c.name }", "#{ c.website_url }", target: "_blank" %>
              </td>
              <td><%= c.country&.name %></td>
              <td><%= c.industries[0]&.name %></td>
              <td><%= c.stage&.name %></td>
              <td><%= c&.total_funded_amount %>千万円</td>
              <td><%= c&.last_funded_at %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </main>
</div>
